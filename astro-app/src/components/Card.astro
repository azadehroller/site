---
import { formatDate } from "../utils";
import type { Post } from "../utils/sanity";

interface Props {
  post: Post;
}

const { post } = Astro.props;
---

<article class="relative flex flex-col bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-lg transition-shadow duration-300 h-full border border-gray-100">
  {
    post.featuredImage?.url ? (
      <img
        class="w-full h-48 object-cover"
        src={post.featuredImage.url}
        alt={post.featuredImage.alt || ""}
      />
    ) : (
      <div class="w-full h-48 bg-gray-100 flex items-center justify-center text-gray-400">
        <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </div>
    )
  }
  <div class="flex flex-col flex-grow p-5">
    <p class="text-xs font-medium text-gray-500 uppercase tracking-wide mb-2">
      {formatDate(post._createdAt)}
    </p>
    <h3 class="text-lg font-bold leading-snug tracking-tight mb-3 line-clamp-2">
      <a
        class="text-gray-900 no-underline hover:text-gray-600 transition-colors before:content-[''] before:absolute before:inset-0"
        href={`/post/${post.slug.current}`}
      >
        {post.title}
      </a>
    </h3>
    <p class="text-sm text-gray-600 leading-relaxed line-clamp-3 flex-grow">{post.excerpt}</p>
  </div>
</article>

